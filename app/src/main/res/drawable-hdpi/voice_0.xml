<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape
            android:shape="ring"
            android:thickness="5dp"
            android:useLevel="false">
            <gradient
                android:angle="0"
                android:endColor="@color/cyan_500"
                android:startColor="@color/amber_500"
                android:type="linear" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">

            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="#87f4ab97"/>
