<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">@color/google_green</item>
        <item name="android:navigationBarColor">#212121</item>
        <item name="md_corner_radius">10dp</item>
        <item name="app_background">@color/app_dark_background</item>
        <item name="app_foreground">@color/app_dark_foreground</item>
        <item name="android:windowBackground">@color/app_dark_background</item>

        <item name="primary_text_color">#d5d5d5</item>

        <item name="md_button_selector">@color/google_green</item>
        <item name="md_color_content">@color/primary_text</item>
        <item name="md_color_button_text">#BDBDBD</item>
        <item name="dialogTheme">@style/Dialog_Fullscreen</item>
        <!--<item name="md_color_content">@color/your_color</item>-->
        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="secondary_text_color">@color/secondary_text</item>
        <!--<item name="android:colorControlHighlight">@color/colorPrimary</item>-->

        <item name="android:popupTheme">@style/PopMenu.Dark</item>
        <item name="popupTheme">@style/PopMenu.Dark</item>
        <item name="popupMenuStyle">@style/PopMenu.Dark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/p_green</item>
        <item name="colorPrimaryDark">@color/p_green_dark</item>
        <item name="colorAccent">@color/google_green</item>
        <item name="android:navigationBarColor">@color/p_green</item>
        <item name="md_corner_radius">10dp</item>
        <item name="md_button_selector">@color/google_green</item>
        <item name="dialogTheme">@style/Dialog_Fullscreen</item>
        <!--<item name="md_color_content">@color/your_color</item>-->
        <item name="actionModeStyle">@style/MyActionMode</item>

        <item name="primary_text_color">#282828</item>
        <item name="app_background">#f4f4f4</item>
        <item name="app_foreground">#fdfdfe</item>
        <!--<item name="android:colorControlHighlight">@color/colorPrimary</item>-->
        <item name="android:popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="secondary_text_color">@color/secondary_text</item>

    </style>

    <style name="DarkTheme.NoActionBar" parent="DarkTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BottomDialog.Dark" parent="BottomDialog">
        <item name="bd_bg_color">@color/app_dark_background</item>
        <item name="bd_nav_color">@color/app_dark_background</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="MyActionMode" parent="ThemeOverlay.AppCompat.Light">
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TranslucentStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="TranslucentStatus.NoActionBar" parent="NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--<item name="android:windowSharedElementsUseOverlay">false</item>-->
    </style>

    <!--文字提取Activity-->
    <style name="ScreenPicker" parent="NoActionBar">
        <item name="android:windowBackground">@color/trans</item>
        <item name="md_corner_radius">10dp</item>
        <item name="android:statusBarColor">@color/trans</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:navigationBarColor">@color/trans</item>
        <!--<item name="android:windowAnimationStyle">@style/InOut</item>-->
    </style>

    <style name="TextOcr" parent="ScreenPicker">
        <item name="android:statusBarColor">@color/half_trans</item>
        <item name="android:navigationBarColor">#22000000</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ScreenAssist" parent="ScreenPicker">
        <item name="android:windowEnterAnimation">@anim/fade_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_bottom</item>
        <item name="bd_bg_color">@color/app_foreground</item>
        <item name="bd_bar_radius">20dp</item>
        <item name="android:navigationBarColor">?attr/bd_bg_color</item>
    </style>

    <style name="TextOcr.Dark" parent="TextOcr">

        <item name="primary_text_color">#d5d5d5</item>

        <item name="md_button_selector">@color/google_green</item>
        <item name="md_color_button_text">#BDBDBD</item>
        <item name="app_background">@color/app_dark_background</item>
        <item name="app_foreground">@color/app_dark_foreground</item>
        <item name="secondary_text_color">@color/secondary_text</item>

        <item name="md_background_color">@color/app_dark_background</item>
        <item name="md_color_content">@color/primary_text</item>

        <item name="popupTheme">@style/PopMenu.Dark</item>
        <item name="android:popupMenuStyle">@style/PopMenu.Dark</item>
        <item name="popupMenuStyle">@style/PopMenu.Dark</item>
        <item name="bd_bg_color">@color/app_dark_background</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="popupMenuBackground">@color/app_dark_background</item>
        <item name="android:popupBackground">@color/app_dark_background</item>
    </style>

    <style name="ScreenAssist.Dark" parent="ScreenAssist">

        <item name="primary_text_color">#d5d5d5</item>

        <item name="md_button_selector">@color/google_green</item>
        <item name="md_color_button_text">#BDBDBD</item>
        <item name="app_background">@color/app_dark_background</item>
        <item name="app_foreground">@color/app_dark_foreground</item>
        <item name="secondary_text_color">@color/secondary_text</item>

        <item name="md_background_color">@color/app_dark_background</item>
        <item name="md_color_content">@color/primary_text</item>

        <item name="popupTheme">@style/PopMenu.Dark</item>
        <item name="android:popupMenuStyle">@style/PopMenu.Dark</item>
        <item name="popupMenuStyle">@style/PopMenu.Dark</item>
        <item name="bd_bg_color">@color/app_dark_background</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="popupMenuBackground">@color/app_dark_background</item>
        <item name="android:popupBackground">@color/app_dark_background</item>
    </style>

    <style name="PopMenu.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="background">@color/app_dark_background</item>
        <item name="android:windowBackground">@color/app_dark_background</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
    </style>

    <!--防止白色启动背景-->
    <style name="TransparentBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="md_corner_radius">10dp</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Main" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/bg_splash</item>
    </style>


    <style name="MaterialButton.White" parent="MaterialButton">
        <item name="android:colorControlHighlight">#FAFAFA</item>
        <item name="colorButtonNormal">#fff</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="MaterialButton.Blue" parent="MaterialButton.White">
        <item name="android:colorControlHighlight">#FAFAFA</item>
        <item name="colorButtonNormal">@color/google_blue</item>
        <item name="android:textColor">#fff</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="TransBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FloatyWindow" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_out</item>
    </style>
</resources>
