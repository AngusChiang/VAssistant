<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyActionMode" parent="ThemeOverlay.AppCompat.Light">
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="ScreenShotTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:statusBarColor">@color/trans</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/InOut</item>-->
    </style>

    <style name="InOut" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/screenshot_open</item>
        <item name="android:activityCloseExitAnimation">@anim/screenshot_exit</item>
    </style>
</resources>